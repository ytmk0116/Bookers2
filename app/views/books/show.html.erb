<div class="container" style="margin-top: 70px">
  <div class="row">
    <p class="text-success"><%= flash[:notice] %></p>
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@new_book.user.id) do %>
              <%= attachment_image_tag @new_book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg" %>
              <br>
              <%= @new_book.user.name %>
            <% end %>
          </td>
          <td><%= @new_book.title %></td>
          <td><%= @new_book.body %></td>
          <% if @new_book.user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@new_book.id), class:'btn btn-success btn-sm' %></td>
          <td><%= link_to 'Destroy', book_path, method: :delete, class:'btn btn-danger btn-sm' %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
